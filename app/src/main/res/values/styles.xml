<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 首页的底部切换栏的风格 -->
    <style name="Main_Bottom_RadioButton_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">1.5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawablePadding">0.5dp</item>
        <item name="android:textColor">@drawable/selector_rb_textcolor</item>
    </style>

    <!-- 细线的 -->

    <style name="smallLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="smallLineStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_color</item>
    </style>



    <!-- 主界面几个按钮的 -->
    <style name="home_second_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">-3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>



    <style name="wh_is_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- 第一个界面 ，热销等界面背景格式-->
    <style name="home_rele_rexiao_textview_bg_style">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#F3F3F3</item>
        <item name="android:layout_height">@dimen/home_center_height</item>
    </style>
    <!-- 第一个界面 热销等左边字样的格式-->
    <style name="wh_is_wrap.home_left_textview_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">11dp</item>
    </style>

    <!-- 第一个界面，热销等右边字样 更多-->
    <style name="home_right_imgview_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/home_more</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <!-- 附近商家界面 ListView的item Style-->
    <style name="near_list_item_ll_style">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <!-- 附近商家界面 ListView 第二部分 右边字样的风格- -->
    <style name="near_list_item_right_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
    </style>


    <!-- 我的页面  里面五个我的订单等的风格 -->
    <style name="me_second_ll_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 我的碎片里面的线-->
    <style name="me_fragment_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>



    <!-- 我的余额 左边图标风格 -->
    <style name="me_fragment_left_text_style" parent="wh_is_wrap">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="me_fragment_right_image_style" parent="wh_is_wrap">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/buy_store_title_more1</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <!-- checkBox 的样式-->
    <style name="goods_checkBox_style" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>


    <!-- 立即购买界面的下面购买数量字样的风格 -->
    <style name="now_pay_text_style" parent="wh_is_wrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- 门店详情下面几个RadioButton的风格-->
    <style name="store_details_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/seletor_store_rb_textcolor</item>
    </style>

    <!-- store 的弹出框动画 -->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/store_pop_in</item>
        <item name="android:windowExitAnimation">@anim/store_pop_out</item>
    </style>

    <!-- 登录界面的tablayout的字体风格，更改大小-->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 商品详情里面的 最上面RB风格-->
    <style name="detais_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/selector_detais_textcolor</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- 商品信息下面的几个按钮的风格 -->
    <style name="details_bottom_tv_style">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>

    </style>
    <!-- 竖着的细线 -->

    <style name="vertical_line_style">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>


    <!--  加盟合作里面的图片风格-->
    <style name="join_img_style" parent="wh_is_wrap">
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- 第二部分的外部LL的风格-->
    <style name="join_ho_two_ll_style">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- LL内部 上面一块-->
    <style name="join_two_ll_top">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 下面一块-->
    <style name="join_two_ll_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 我要加盟的按钮的 -->
    <style name="join_we_want_join_btn_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:src">@mipmap/we_join</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 商户加盟里面的最上面的rb的风格-->
    <style name="client_join_radiobutton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/seletor_clientjoin_bg</item>
        <item name="android:textColor">@drawable/seletor_clientjoin_textcolor</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 收藏界面的tablayout的字体风格，更改大小-->
    <style name="collection_tablayout_style" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <!-- 评价里面几个星星 -->
    <style name="evaluate_star_style">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>



</resources>
