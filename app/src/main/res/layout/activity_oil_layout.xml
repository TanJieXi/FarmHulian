<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_title_height">
        <ImageView
            android:clickable="true"
            android:id="@+id/oil_title_back"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="18dp"
            android:src="@mipmap/oil_title_back"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/oil_tv_title_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="11dp"
                android:text="健康到家任你选"
                android:drawableLeft="@mipmap/oil_title_fangda"
                android:drawablePadding="-50dp"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@mipmap/bg_oil_search"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="27dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_height="27dp">
            <ImageView
                android:visibility="gone"
                android:id="@+id/oil_iv_title_erwei"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/oil_title_erwei"
                />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="35dp"
        >
        <android.support.design.widget.TabLayout
            android:background="#06AA3A"
            android:id="@+id/oil_tablayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            />

        <RelativeLayout
            android:clickable="true"
            android:background="#06AA3A"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_moreOrder_up"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/oil_title_choice_t"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_moreOrder_down"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/oil_title_choice_d"
                    />
            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/oil_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />


</LinearLayout>