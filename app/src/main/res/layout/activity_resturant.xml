<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.farmhulian.activities.TravelActivity">
    <com.farmhulian.views.NavTopView
        android:id="@+id/rest_topView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_title_height"/>
    <TextView
        style="@style/smallLineStyle"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_rest_titleView"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_height"
                android:src="@mipmap/buy_store_img"
                />

            <TextView
                style="@style/smallLineStyle"/>
            <RelativeLayout
                android:id="@+id/rl_rest_nongchang"
                android:clickable="true"
                style="@style/home_rele_rexiao_textview_bg_style"
                >
                <TextView
                    style="@style/wh_is_wrap.home_left_textview_style"
                    android:text="农场直供原材料"
                    android:textSize="19sp"
                    />
                <ImageView
                    style="@style/home_right_imgview_style"
                    />
            </RelativeLayout>
            <TextView
                style="@style/smallLineStyle"/>

            <com.farmhulian.views.NoScrollGridView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:clipToPadding="true"
                android:id="@+id/rest_gridView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#ecebeb"
                android:numColumns="2"
                android:verticalSpacing="14dp"
                android:horizontalSpacing="7dp"
                android:gravity="center"
                android:layout_weight="1"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
