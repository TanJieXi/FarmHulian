<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.farmhulian.activities.TravelActivity">
    <com.farmhulian.views.NavTopView
        android:id="@+id/travel_topView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_title_height"/>
    <TextView
        style="@style/smallLineStyle"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_titleView"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/banner_height"
            android:src="@mipmap/buy_store_img"
            />

        <TextView
            style="@style/smallLineStyle"/>
        <RelativeLayout
            android:id="@+id/rl_travle_yongbao"
            android:clickable="true"
            style="@style/home_rele_rexiao_textview_bg_style"
            >
            <TextView
                style="@style/wh_is_wrap.home_left_textview_style"
                android:text="拥抱大自然"
                android:textSize="19sp"
                />
            <ImageView
                style="@style/home_right_imgview_style"
                />
        </RelativeLayout>
        <TextView
            style="@style/smallLineStyle"/>

        <com.farmhulian.views.NoScrollGridView
            android:id="@+id/travel_gridView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ecebeb"
            android:numColumns="2"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="2dp"
            android:gravity="center"
            android:layout_weight="1"
            />


    </LinearLayout>

</ScrollView>

</LinearLayout>
