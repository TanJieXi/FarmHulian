<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_nav_top_height"
        android:background="@color/bg_main_green"
        >
        <ImageView
            android:clickable="true"
            android:id="@+id/nav_top_right2"
            android:layout_width="@dimen/public_nav_top_height"
            android:layout_height="@dimen/public_nav_top_height"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/nav_top_right"
            android:padding="@dimen/public_nav_top_img_padding"
            android:src="@mipmap/title_left_person"
            android:visibility="gone" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/nav_top_right"
            android:layout_width="@dimen/public_nav_top_height"
            android:layout_height="@dimen/public_nav_top_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/public_nav_top_img_padding"
            android:src="@mipmap/title_right_saoma" />

        <TextView
            android:id="@+id/nav_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题栏"
            android:textColor="@color/white"
            android:textSize="@dimen/public_nav_top_font_size" />

        <ImageView
            android:id="@+id/nav_top_left"
            android:clickable="true"
            android:layout_width="@dimen/public_nav_top_height"
            android:layout_height="@dimen/public_nav_top_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="toBack"
            android:padding="@dimen/public_nav_top_img_padding_left"
            android:src="@mipmap/join_back" />

        <TextView
            android:id="@+id/nav_top_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/nav_top_left"
            android:padding="@dimen/public_nav_top_img_padding"
            android:text="1111"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:clickable="true"
            android:id="@+id/nav_top_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/public_nav_top_img_padding"
            android:textColor="@color/white"
            android:drawableLeft="@mipmap/share_icon1"
            android:layout_marginRight="20dp"
            android:visibility="gone"
             />

    </RelativeLayout>
    <TextView
        style="@style/smallLineStyle"
        />

</LinearLayout>