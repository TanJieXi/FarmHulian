<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配送方式"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="20dp"
            />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "商家配送"
                android:textColor="@color/black"
                />
            <CheckBox
                android:id="@+id/cb_store_choice3"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/goods_checkBox_style"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/smallLineStyle1"/>

            <TextView
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "农场直邮"
                android:textColor="@color/black"
                />
            <CheckBox
                android:id="@+id/cb_store_choice1"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/goods_checkBox_style"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "用户自提"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/smallLineStyle1"/>
            <CheckBox
                android:id="@+id/cb_store_choice2"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/goods_checkBox_style"/>
        </RelativeLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/btn_sure_sonWays"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFC001"
            android:text="确 定"
            android:textSize="23sp"
            android:textColor="@color/white"
            />
    </LinearLayout>

</RelativeLayout>