<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tab = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_collection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.farmhulian.activities.CollectionActivity">
    <!-- 标题栏 -->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/iv_collection_back"
            android:clickable="true"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/near_item_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="我的收藏"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </RelativeLayout>
    <TextView
        style="@style/smallLineStyle1"/>
    <android.support.design.widget.TabLayout
        android:background="@color/bg_main_green"
        android:id="@+id/collection_tablayout"
        tab:tabTextAppearance="@style/collection_tablayout_style"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/collection_viewPager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
